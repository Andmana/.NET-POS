@model Friend
@{
    ViewData["title"] = "Detail Friends";
}
<div class="h4 mb-4">Detail Friend</div>

    <div class="mb-4 row">
        <label for="Id" class="col-sm-2 col-form-label">Id</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Id" name="Id" value="@Model.Id" />
        </div>
    </div>

    <div class="mb-4 row">
        <label for="Name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" />
        </div>
    </div>

    <div class="mb-4 row">
        <label for="Address" class="col-sm-2 col-form-label">Address</label>
        <div class="col-sm-10">
            <textarea type="text" class="form-control" id="Address" name="Address">@Model.Address</textarea>
        </div>

        <div class="mb-4 row">
            <div class="col-sm-10">
                <a class="btn btn-light" asp-controller="Friends" asp-action="Index"> Back to list</a>
            </div>
        </div>
