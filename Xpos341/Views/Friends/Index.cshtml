@{
    ViewData["Title"] = "Friends List";
}

<a class="btn btn-primary" asp-controller="Friends" asp-action="Create">Add Friend</a>

<h2 class="center">Frinds Table</h2>
<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Address</th>
            <th scope="col text-center p-auto" >Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Friend item in ViewBag.ListFriends)
        //@foreach (Friend item in Model)
        {
            <tr >
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Address</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-success" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id" >Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>