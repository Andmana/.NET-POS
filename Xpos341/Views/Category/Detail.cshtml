@using xpos341.datamodels;
@model TblCategory;
@{
    Layout = null;
    ViewData["Title"] = "Edit Category";
}

<div class="card">
    <div class="card-body">
        <div class="h4 mb-4">@ViewData["Title"]</div>

            <input type="hidden" name="Id" id="Id" value="@Model.Id" />

            <div class="mb-4 row">
                <label for="NameCategory" class="col-sm-4 col-form-label">Name Category</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="NameCategory" name="NameCategory" value="@Model.NameCategory" />
                </div>
            </div>

            <div class="mb-4 row">
                <label for="Description" class="col-sm-4 col-form-label">Description</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="Description" name="Description" value="@Model.Description" />
                </div>
            </div>

            <div class="mb-4 row">
                <div class="col-sm-10">
                    <a class="btn btn-light fw-bold" asp-controller="Category" asp-action="Index"> Back to list</a>
                </div>
            </div>


    </div>
</div>
