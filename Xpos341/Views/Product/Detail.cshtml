@using xpos341.viewmodels;
@model VMTblProduct;
@{
    Layout = null;
    ViewData["Title"] = "Detail Product";
}

<div class="card" >
    <h1 class="card-title mb-4" height="600px">@ViewData["Title"]</h1>
    <img src="~/images/@Model.Image" class="card-img-top images" alt="...">
    <div class="card-body">

        <div class="mb-4 row">
            <label for="NameProduct" class="col-sm-4 col-form-label">Name Product</label>
            <div class="col-sm-8">
                <span id="validate_NameProduct" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-4 row">
            <label for="Price" class="col-sm-4 col-form-label">Category / Variant</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="CategoryVariant" name="CategoryVariant" value="@Model.NameCategory / @Model.NameVariant" readonly />
            </div>
        </div>


        <div class="mb-4 row">
            <label for="Price" class="col-sm-4 col-form-label">Price</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="Price" name="Price" value="@Model.Price" readonly />
            </div>
        </div>

        <div class="mb-4 row">
            <label for="Stock" class="col-sm-4 col-form-label">Stock</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="Stock" name="Stock" value="@Model.Stock" readonly />
            </div>
        </div>

        <div class="mb-4 row">
            <div class="col-sm-10">
                <a class="btn btn-light fw-bold" asp-controller="Product" asp-action="Index"> Back to list</a>
            </div>
        </div>


    </div>
</div>
